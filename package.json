{
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "server:build": "yarn clean && yarn server",
    "server": "babel -d ./build ./src -s",
    "client:build": "cd client && yarn && yarn build",
    "start": "yarn server:build && node ./build/index.js",
    "dev": "yarn server:build && yarn client:build && node ./build/index.js"
  },
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0"
  }
}